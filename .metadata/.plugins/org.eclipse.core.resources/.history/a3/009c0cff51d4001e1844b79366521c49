
public class Test {
	
	public static void main(String[] args) {
		
		String input = "@rahul!pawar 123ABC he@llo@";
		
		Test t = new Test();
		t.speclOne(input);
		
	}
	
	public void speclOne(String input) {
		
		String spclChar = "@! ";
		
		for(char c : spclChar.toCharArray()) {
			input = input.replace(c,' ');
		}
		
		String arr[] = input.trim().split(" ");
		
		for (String string : arr) {
			System.out.print(string);
		}
		
	}

}
